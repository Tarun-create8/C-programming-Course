#include <stdio.h>
#include <stdlib.h>
int main(){
    char variable;
    printf("Enter variable: ");
    scanf("%c", &variable);
    if(variable=='a'||variable=='e'||variable=='i'||variable=='o'||variable=='u'||variable=='A'||variable=='E'||variable=='I'||variable=='O'||variable=='U'){
        printf("Variable is vowel");
    }
    else{
        printf("Variable is consonant");
    }
    return 0;
}

