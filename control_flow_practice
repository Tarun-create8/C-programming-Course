#include <stdio.h>
#include <stdlib.h>
int main(){
    int a, b ,c;
    printf("Enter a: ");
    scanf("%d", &a);
    printf("Enter b: ");
    scanf("%d", &b);
    printf("Enter c: ");
    scanf("%d", &c);
    int max, min;
    max=a;
    min=b;
    if(max>b){
        max= a;
    }else if(min<b){
        min = b;
    }
    if(max < c){
        max=c;
    }
    else if(min>c){
        min = c;
    }
    printf("%d\n", max);
    printf("%d\n", min);
    return 0;
}

//4 // ned to work on this 

#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int main(){
    int a, b, c;
    printf("Enter the value of a: ");
    scanf("%d", &a);
    printf("Enter the value of a: ");
    scanf("%d", &b);
    printf("Enter the value of a: ");
    scanf("%d", &c);
    double discriminant, root1, root2;
    discriminant=((b*b)-4*a*c);
    if(discriminant>0){
        root1=(((-b)+(sqrt(discriminant)/(2.0*a))));
        root2=(((-b)-(sqrt(discriminant))/(2.0*a)));
        printf("%.2lf\n", root1);
        printf("%.2lf\n", root2);
    }
    if(discriminant==0){
        root1=((-b)/(2.0*a));
        root2=root1;
        printf("%.2lf\n", root1);
        printf("%.2lf\n", root2);
    }
    if(discriminant<0){
        double real_part, imaginary_part;
        real_part=(-b)/(2.0*a);
        imaginary_part=((sqrt(-discriminant))/(2.0*a));

        root1=(real_part + (imaginary_part));
        root2=(real_part - (imaginary_part));
        printf("%.2lf + i%.2lf\n", root1);
        printf("%.2lf - i%.2lf\n", root2);
    }
    return 0;
}

5
//Year is leap or not 
#include <stdio.h>
#include <stdlib.h>
int main(){
    int year;
    printf("Enter year: ");
    scanf("%d", &year);
    if ((year % 4 == 0 && year % 100 != 0) || (year % 400 == 0)) {
        printf("Entered year is leap year");
    } else {
        printf("Entered year is not a leap year");
    }
    return 0;
}

//6th
#include <stdio.h>
#include <stdlib.h>
int main(){
    int value;
    printf("Enter ASCII Value: ");
    scanf("%d", &value);
    if(value>=65 && value<=90){
        printf("Enetrd ASCII value is for Upper case letter");
    }
    else if(value>=97 && value<=122){
        printf("Enterd ASCII vlaue is for lower case letter");
    }
    else{
        printf("Not an alphabet");
    }
    return 0;
}

//7th 
#include <stdio.h>
#include <stdlib.h>
int main(){ 
    int n, i, sum=0;
    printf("Enter n: ");
    scanf("%d", &n);
    // double sum=(n*(n+1))/(2.0);
    // printf("SUM: %.2lf", sum);
    for(i=0;i<=n;i++){
        sum+=1;
    }
    printf("SUM: %d", sum);
    return 0;
}

//8th
#include <stdio.h>
#include <stdlib.h>
int main(){
    int n, i, value=1;
    printf("Enter the number: ");
    scanf("%d", &n);
    if(n==0 || n==1){
        printf("n!= 1");
    }
    else if(n>=2){
        for(i=1;i<=n;i++){
            value*=i;
        }
    }
    printf("%d\n", value);
    return 0;
}
