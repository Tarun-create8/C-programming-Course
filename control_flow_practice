#include <stdio.h>
#include <stdlib.h>
int main(){
    int a, b ,c;
    printf("Enter a: ");
    scanf("%d", &a);
    printf("Enter b: ");
    scanf("%d", &b);
    printf("Enter c: ");
    scanf("%d", &c);
    int max, min;
    max=a;
    min=b;
    if(max>b){
        max= a;
    }else if(min<b){
        min = b;
    }
    if(max < c){
        max=c;
    }
    else if(min>c){
        min = c;
    }
    printf("%d\n", max);
    printf("%d\n", min);
    return 0;
}

