#include <stdio.h>
#include <stdlib.h>
#include <math.h>
int main(){
    int a, b, c;
    printf("Enter the value of a: ");
    scanf("%d", &a);
    printf("Enter the value of a: ");
    scanf("%d", &b);
    printf("Enter the value of a: ");
    scanf("%d", &c);
    double discriminant, root1, root2;
    discriminant=((b*b)-4*a*c);
    if(discriminant>0){
        root1=(((-b)+(sqrt(discriminant)/(2.0*a))));
        root2=(((-b)-(sqrt(discriminant))/(2.0*a)));
        printf("%.2lf\n", root1);
        printf("%.2lf\n", root2);
    }
    if(discriminant==0){
        root1=((-b)/(2.0*a));
        root2=root1;
        printf("%.2lf\n", root1);
        printf("%.2lf\n", root2);
    }
    if(discriminant<0){
        double real_part, imaginary_part;
        real_part=(-b)/(2.0*a);
        imaginary_part=((sqrt(-discriminant))/(2.0*a));

        root1=(real_part + (imaginary_part));
        root2=(real_part - (imaginary_part));
        printf("%.2lf + i%.2lf\n", root1);
        printf("%.2lf - i%.2lf\n", root2);
    }
    return 0;
}
