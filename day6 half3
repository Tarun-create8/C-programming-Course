//To check if a number is positive negative or 0
#include <stdio.h>
int main(){
    int number;
    printf("Enter number: ");
    scanf("%d", &number);
    if(number>0){
        printf("The number is positive\n");
    }else if(number<0){
        printf("Number is negative");
    }else{
        printf("Number enterd is 0");
    }
    return 0;
}

//Check num is even or odd
#include <stdio.h>
int main(){
    int number;
    printf("Enter number: ");
    scanf("%d", &number);
    if(number%2 == 0){
        printf("Number is even ");
    }
    else {
        printf("number is odd ");

    }
    return 0;
}

//  TO check if a Alphabet is vovel or consonent
#include <stdio.h>
int main(){
    char variable='a';
    printf("Enter alphabet: ");
    scanf("%c", &variable);
    if(variable == 'a' || variable == 'A'){
        printf("Its a vowel");
    }

    return 0;
}

// Multiplication Table 
#include <stdio.h>
int main(){
    int num, range;
    printf("Enter number and range: ");
    scanf("%d %d", &num, &range);
    if(range==10){
        printf("%d*1=%d", num, num*1);
        printf("%d*2=%d", num, num*2);
        printf("%d*3=%d", num, num*3);
        printf("%d*4=%d", num, num*4);
        printf("%d*5=%d", num, num*5);
        printf("%d*6=%d", num, num*6);
        printf("%d*7=%d", num, num*7);
        printf("%d*8=%d", num, num*8);
        printf("%d*9=%d", num, num*9);
        printf("%d*10=%d", num, num*10);
    }
    else{
        printf("Enter proper range");
    }
    return 0;
}
