//While loop 
#include <stdio.h>
#include <stdlib.h>
int main(){
    int count=1;
    while(count<=10){
        printf("*");
        count=count+1;
    }
    return 0;
}

#include <stdio.h>
#include <stdlib.h>
int main(){
    int number, n, i;
    int result=1;
    printf("Enter number: ");
    scanf("%d", &number);
    printf("Enter Power: ");
    scanf("%d", &n);
    for(i=1;i<=n;++i){
        result= number*result;
    }
    printf("%d", result);
    return 0;
}

// Challange 
///challange 
#include <stdio.h>
#include <stdlib.h>
int main(){
    //to print no of star mentioned by user 
    int count=1, n;
    // printf("Enter Count: ");
    // scanf("%d", &count);
    printf("Enter n: ");
    scanf("%d", &n);
    while(count<=n){
        printf("*");
        count = count +1;
    }
    return 0;
}

//challenge 2
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number, power, result=1;

    printf("Enter the number: ");
    scanf("%d", &number);
    printf("Enter the power: ");
    scanf("%d", &power);
    while(power>0){
        result= result*number ;
        power--;
        printf("Inside loop(%d): %d * %d \n", result, result, number);
    }
    printf("Final output: %d", result);
    return 0;
}

//Milestone-->
#include <stdio.h>
#include <stdlib.h>
int main(){
    int course=1, grade, average=0;
    printf("Enter the number of Courses: ");
    scanf("%d", &course);
    int tempCourse=course;
    while(course>0){
        printf("Enter Grade: ");
        scanf("%d", &grade);
        average=average+grade;
        // printf("AVERAGE per loop(%d):%d + %d\n", average, average, grade);
        course--;
    }
    // printf("%d", tempCourse);
    float updatedAverage=average/(double)tempCourse;
    printf("Average outside loop: %.2f\n", updatedAverage);
    return 0;
}

// Or 
#include <stdio.h>
#include <stdlib.h>
int main()
{
    int grade;
    int total_sum=0, grade_count=0;
    printf("Enter your grade or '-1' to stop: ");
    scanf("%d", &grade);

    while(grade!=-1){
        total_sum=total_sum+grade;
        grade_count++;
        printf("Enter your grade or '-1' to stop: ");
        scanf("%d", &grade);
    }
    printf("Entered grade count: %d\n", grade_count);
    printf("Average grade: %f\n", (float)total_sum/grade_count);
    return 0;
}
