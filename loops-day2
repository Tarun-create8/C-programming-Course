#include <stdio.h>
int main(){
  int n;
   printf("Enter n: ");
   scanf("%d", &n);
  for(int i=1;i<=n;i++){ 
  for(int j =1;j<=i;j++){
    printf("%d ", i);
    }
    printf("\n");
    }
  return 0;
}

//Continuation
#include <stdio.h>
#include <stdlib.h>
int main(){
    int n, j;
    printf("Enter n: ");
    scanf("%d", &n);
    for(int i=1; i<=n; i++){
        j=i;
        while(j>0){
            printf("%d", i);
            j--;
        }
        printf("\n");
    }
    return 0;
}

//Milestone 2
#include <stdio.h>
#include <stdlib.h>
int main(){
    long result=1;
    printf("For 1 rs that is doubled every day for 30 days: \n");
    for(int i=2; i<=30; i++){
        result = result * 2;
        // printf("Inside loop: %ld\n", result);
    }
    printf("Total value: %ld\n", result);
    long millionDollar=1000000;
    if(result > millionDollar){
        printf("1 day per cent for 30 days is a better deal than having 1 million dollar today\n");
    }else if(result<millionDollar){
        printf("Take 1 million dollar Today\n");
        printf("Having million dollar today would be great but that would be boring .....\n");
    }
    else{
        printf("Errorrr.....");
    }
    return 0;
}
