// For loop -->>

//prints to the required number
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number;
    int i;
    printf("Enter a number: ");
    scanf("%d", &number);
    for(i=1;i<=number; i++){
        printf("%d\n", i);
    }
    return 0;
}

//Printing odd number upto a specified number
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number;
    int i;
    printf("Enter number: ");
    scanf("%d", &number);
    for(i=1; i<=number; i=i+2){
        printf("%d\n", i);
    }
    printf("%d", i);
    return 0;
}

//Printing even number
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number;
    int i;
    printf("Enter number: ");
    scanf("%d", &number);
    for(i=0; i<=number; i=i+2){
        printf("%d\n", i);
    }
    // printf("%d", i);
    return 0;
}

//Challange using for loop-->
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number, power;
    int i, result=1;
    printf("Enter Number: ");
    scanf("%d", &number);
    printf("Enter power: ");
    scanf("%d", &power);
    for(i=1; i<=power; i++){
        result=result*number;
        printf("LOOP RESULT(%d): %d * %d\n", result, result, number);
    }
    printf("OUTPUT : %d", result);
    return 0;
}

//Challange Punishment using for loop 
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number;
    int i;
    // printf("Enter the number of times u want to print: ");
    // scanf("%d", &number);
    for(i=1; i<=number; i++){
        printf("I am sorry for not listening to my teacher i will practise more next time \n");
    }
    return 0;
}

//Using while 
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number, count=1;
    printf("Enter the number of times u want to print: ");
    scanf("%d", &number);
    while(count<=number){
        printf("I am sorry for not listening to my teacher i will practise more next time \n");
        count++;
    }
    return 0;
}

//Using do while
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number, count=1;
    printf("Enter number: ");
    scanf("%d", &number);
    do{
        printf("I am sorry sir will practice hard\n");
        count++;
    }while(count<=number);
    return 0;
}


//Challenge for right trangle 
#include <stdio.h>
int main(){
    int number, i, result;
    printf("Enter n: ");
    scanf("%d", &number);
    for(i=1; i<=number; i++){
        printf("%d ", i);//THis prints all the numbers ;
    }
    return 0;
}
