}
//or 
#include <stdio.h>
int main(){
    int number, result=1;
    printf("Enter number: ");
    scanf("%d", &number);
    for(int i=1; i<=number; i++){
        result=2*i;
    }
    return 0;
}

//5th
#include <stdio.h>
int main(){
    int current_value=1, blank_space;
    int n;
    printf("Insert n(Rows): ");
    scanf("%d", &n);
    blank_space=n-1;
    for(int i=1; i<=n; i++){
        for(int k=blank_space; k>=1; k--){
            printf(" ");
        }
        for(int j=1; j<=i; j++){
            printf("%d ", current_value);
            current_value += 1;
        }
        printf("\n");
        blank_space--;
    }
    return 0;
}

//6th 
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number, sum=0;
    printf("Enter number: ");
    scanf("%d", &number);
    for(int i=1; i<=number;i++){
        if(i%3==0 && i%5==0){
            sum=sum+i;
        }
    }
    printf("%d ", sum);
    return 0;
}

//7th 
#include <stdio.h>
#include <stdlib.h>
int main(){
    int number, sum_of_3=0, sum_of_5=0, sum_common=0, result=0;
    printf("Enter number: ");
    scanf("%d", &number);
    // //Trival solution 
    // for(int i=1;i<=number;i++){
    //     if(i%3==0 || i%5==0){
    //         sum=sum+i;
    //     }
    // }

    
    //optimal solution(lmao not optimal igss)
    for(int i=3; i<=number; i=i+3){
        sum_of_3=sum_of_3+i;
    }
    for(int j=5;j<=number;j=j+5){
        sum_of_5=sum_of_5+j;
    }
    for(int i=1;i<=number;i++){
        if(i%3==0 && i%5==0){
            sum_common=sum_common+i;
        }
    }

    result=sum_of_3+sum_of_5-sum_common;
    printf("%d", result);
    return 0;
}
































