// Loops day1---->>>>>>
//1st
#include <stdio.h>
int main(){
    int number;
    printf("Enter number: ");
    scanf("%d", &number);
    for(int i=0; i<=number; i++){
        printf("%d ", i);
    }
    printf("\nBackward sequence: ");
    for(int i=0;i<=number;i++){
        printf("%d ", number-i);
    }
    return 0;
}


//2nd 
#include <stdio.h>
int main(){
    int number, result=0;
    printf("Enter number: ");
    scanf("%d", &number);
    for(int i=0;i<=number;i++){
        result += i;
    }
    printf("Sum: %d", result);
    return 0;
}

//3rd
#include <stdio.h>
int main(){
    int number, result=1, iterations;
    printf("Enter number: ");
    scanf("%d", &number);
    printf("Enter number of iteration: ");
    scanf("%d", &iteration);
    printf("Multiplication Table-->>\n");
    for(int i=1; i<=iteration; i++){
        result = number*i;
        printf("%d * %d = %d\n", number, i, result);
    }
    return 0;
}

//4th 
#include <stdio.h>
int main(){
    int number, result=1;
    printf("Enter number: ");
    scanf("%d", &number);
    // printf("Enter number of iteration: ");
    // scanf("%d", &iterations);
    // printf("Multiplication Table-->>\n");
//Solved without any conditions
    for(int i=1; i<=number; i++){
        result = 2*i;
        printf("%d\n", result);
    }
    return 0;
}
//or 
#include <stdio.h>
int main(){
    int number, result=1;
    printf("Enter number: ");
    scanf("%d", &number);
    for(int i=1; i<=number; i++){
        result=2*i;
    }
    return 0;
}

//5th
#include <stdio.h>
int main(){
    int current_value=1, blank_space;
    int n;
    printf("Insert n(Rows): ");
    scanf("%d", &n);
    blank_space=n-1;
    for(int i=1; i<=n; i++){
        for(int k=blank_space; k>=1; k--){
            printf(" ");
        }
        for(int j=1; j<=i; j++){
            printf("%d ", current_value);
            current_value += 1;
        }
        printf("\n");
        blank_space--;
    }
    return 0;
}
































