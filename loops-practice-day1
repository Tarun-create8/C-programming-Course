// Loops day1---->>>>>>
//1st
#include <stdio.h>
int main(){
    int number;
    printf("Enter number: ");
    scanf("%d", &number);
    for(int i=0; i<=number; i++){
        printf("%d ", i);
    }
    printf("\nBackward sequence: ");
    for(int i=0;i<=number;i++){
        printf("%d ", number-i);
    }
    return 0;
}


//2nd 
#include <stdio.h>
int main(){
    int number, result=0;
    printf("Enter number: ");
    scanf("%d", &number);
    for(int i=0;i<=number;i++){
        result += i;
    }
    printf("Sum: %d", result);
    return 0;
}

//3rd
#include <stdio.h>
int main(){
    int number, result=1, iterations;
    printf("Enter number: ");
    scanf("%d", &number);
    printf("Enter number of iteration: ");
    scanf("%d", &iteration);
    printf("Multiplication Table-->>\n");
    for(int i=1; i<=iteration; i++){
        result = number*i;
        printf("%d * %d = %d\n", number, i, result);
    }
    return 0;
}

