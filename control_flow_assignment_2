// // Month number to month name conversion is not efficient
#include <stdio.h>
#include <stdlib.h>
int main(){
    int month;
    printf("Enter month number(1-12): ");
    scanf("%d", &month);
    if(month==1){
        printf("Janauary");
    }
    else if(month == 2){
        printf("Febuary");
    }
    else if(month == 3 ){
        printf("March");
    }
    else if(month ==4 ){
        printf("April");
    }
    else if(month ==5 ){
        printf("May");
    }
    else if(month ==6 ){
        printf("June");
    }
    else if(month ==7 ){
        printf("July");
    }
    else if(month == 8 ){
        printf("August");
    }
    else if(month == 9 ){
        printf("Sept");
    }
    else if(month == 10){
        printf("October");
    }
    else if(month == 11){
        printf("November");
    }
    else if(month == 12){
        printf("December");
    }
    else{
        printf("Enter a valid number .....");
    }
    return 0;
}

//Using Switch and cases for the above question
#include <stdio.h>
#include <stdlib.h>
int main(){
    int month;
    printf("Enter month number(1-12): ");
    scanf("%d", &month);
    switch(month){
        case 1:
        printf("Jan");
        break;
        case 2:
        printf("Feb");
        break;
        case 3:
        printf("March");
        break;
        case 4:
        printf("April");
        break;
        case 5:
        printf("May");
        break;
        case 6:
        printf("June");
        break;
        case 7:
        printf("July");
        break;
        case 8:
        printf("August");
        break;
        case 9:
        printf("Sept");
        break;
        case 10:
        printf("Oct");
        break;
        case 11:
        printf("Nov");
        break;
        case 12:
        printf("Dec");
        break;
        default:
        printf("Enter a valid number");
        break;
    }
    return 0;
}

//receiving input in second then convert it into hours min and remaining seconds
#include <stdio.h>
#include <stdlib.h>
int main(){
    int seconds;
    printf("Enter Seconds: ");
    scanf("%d", &seconds);
    int hours, minutes, remaining_seconds;
    hours=seconds/3600;
    printf("Hours: %d\n", hours);//Sorted 
    minutes=(seconds%3600)/60;
    printf("Minutes: %d\n", minutes);
    remaining_seconds=(seconds%3600)%60;
    printf("Seconds: %d\n", remaining_seconds);
    if (hours<10){
        printf("0%d", hours);
    }
    else{
        printf("%d", hours);
    }
    printf(":");
    if (minutes<10){
        printf("0%d", minutes);
    }
    else{
        printf("%d", minutes);
    }
    printf(":");
    if (remaining_seconds<10){
        printf("0%d", remaining_seconds);
    }
    else{
        printf("%d", remaining_seconds);
    }
    return 0;
}
